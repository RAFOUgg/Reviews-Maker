# Discord OAuth2
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_CLIENT_SECRET=your_client_secret_here
DISCORD_REDIRECT_URI=http://localhost:3000/api/auth/discord/callback # Update for production to https://yourdomain/api/auth/discord/callback

# Session
SESSION_SECRET=your_generated_secret_here

# Database
DATABASE_URL="file:../db/reviews.sqlite"

# Server
PORT=3000
NODE_ENV=development

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Optional: If your site is hosted under a path prefix (eg. https://example.com/reviews),
# set BASE_PATH=/reviews and the server will rewrite incoming requests to /reviews/api/* -> /api/*
# (This is recommended to fix mismatches between frontend base path and backend route mounting)
BASE_PATH=
# Override secure cookie (true/false). Useful for local testing when not using TLS.
SESSION_SECURE=
SESSION_DOMAIN=    # Optional. Set to .yourdomain.com to share cookies across subdomains
